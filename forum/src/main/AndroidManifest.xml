<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fahamu.chat.forum">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="androidx.multidex.MultiDexApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true">
        <activity android:name="com.fahamutech.adminapp.forum.ForumMainActivity">
            <!--<intent-filter>-->
                <!--<action android:name="android.intent.action.MAIN" />-->

                <!--<category android:name="android.intent.category.LAUNCHER" />-->
            <!--</intent-filter>-->
        </activity>

        <!-- <activity -->
        <!-- android:name=".ChatActivity" -->
        <!-- android:label="Majadiliano" -->
        <!-- android:parentActivityName=".ForumMainActivity" -->
        <!-- android:theme="@style/AppTheme" /> -->

        <service android:name="com.fahamutech.adminapp.forum.message.Notification">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <!--
     Set custom default icon. This is used when no icon is set for incoming notification chatMessages.
     See README(https://goo.gl/l4GJaQ) for more.
        -->
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/ic_email" />
        <!--
             Set color used with incoming notification chatMessages. This is used when no color is set for the incoming
             notification message. See README(https://goo.gl/6BKBk7) for more.
        -->
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/colorAccent" />

        <activity
            android:name="com.fahamutech.adminapp.forum.ProfileActivity"
            android:label="@string/title_activity_sign_in"
            android:parentActivityName="com.fahamutech.adminapp.forum.ForumMainActivity" />
        <activity
            android:name="com.fahamutech.adminapp.forum.MyChatActivity"
            android:launchMode="singleTask"
            android:label="@string/title_activity_my_chat"
            android:parentActivityName="com.fahamutech.adminapp.forum.ForumMainActivity" />
        <activity
            android:name="com.fahamutech.adminapp.forum.SignUpActivity"
            android:label="@string/title_activity_sign_up" />
        <activity
            android:name="com.fahamutech.adminapp.forum.PayActivity"
            android:label="@string/title_activity_pay"
            android:parentActivityName="com.fahamutech.adminapp.forum.ProfileActivity" />
        <activity
            android:name="com.fahamutech.adminapp.forum.ReceiptsActivity"
            android:label="@string/title_activity_receipts"
            android:parentActivityName="com.fahamutech.adminapp.forum.ProfileActivity" />
        <activity
            android:name="com.fahamutech.adminapp.forum.ForumImageViwer"
            android:parentActivityName="com.fahamutech.adminapp.forum.MyChatActivity"
            android:label="@string/title_activity_forum_image_viwer"
            android:theme="@style/AppTheme.NoActionBar"/>
    </application>

</manifest>